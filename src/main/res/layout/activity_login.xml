<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafaff"
    tools:context=".LoginActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:layout_marginTop="@dimen/_minus12sdp"
        app:cardBackgroundColor="#115bdf"
        app:cardCornerRadius="@dimen/_11sdp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/doctors" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_260sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Log In !!!"
            android:textAllCaps="true"
            android:textColor="#172F57"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="and find your doctor now "
            android:textAllCaps="false"
            android:textColor="#ACB5C2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_19sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/shape_white_rect"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="#115bdf"
            android:ems="10"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:padding="@dimen/_6sdp" />

        <EditText
            android:id="@+id/edtpPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/shape_white_rect"
            android:drawableLeft="?android:attr/fingerprintAuthDrawable"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="#115bdf"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/_6sdp" />

        <TextView
            android:id="@+id/txtLogIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/shape_white_rect"
            android:backgroundTint="#115bdf"
            android:gravity="center"
            android:text="Log In"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>