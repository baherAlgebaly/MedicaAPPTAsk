<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5FC"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp"
            tools:context=".DoctorActivity">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingTop="@dimen/_22sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingBottom="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/shape_white_rect"
                    android:tint="#9EA8B8"
                    app:srcCompat="?attr/homeAsUpIndicator" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_white_rect"
                    android:scaleType="centerInside"
                    android:tint="#9EA8B8"
                    app:srcCompat="@android:drawable/stat_sys_phone_call" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_12sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_137sdp"
                    app:cardCornerRadius="14dp">

                    <ImageView
                        android:id="@+id/imgAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/nada" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:singleLine="true"
                    android:text="Dr.Alla mohamed"
                    android:textColor="#172F57"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSpec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|top"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_marginTop="@dimen/_32sdp"
                    android:singleLine="true"
                    android:text="Dermatology"
                    android:textColor="#ACB5C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_marginBottom="@dimen/_41sdp"
                    android:background="@drawable/shape_white_rect"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_star_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginLeft="@dimen/_145sdp"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:text="Rating"
                    android:textColor="#ACB5C2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginLeft="@dimen/_145sdp"
                    android:layout_marginBottom="@dimen/_43sdp"
                    android:text="4 out of 5"
                    android:textColor="#172F57"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView9123"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/shape_white_rect"
                    android:scaleType="center"

                    app:srcCompat="@drawable/ic_money_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginLeft="@dimen/_145sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="Price"
                    android:textColor="#ACB5C2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:layout_marginLeft="@dimen/_145sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:text="450 EGP"
                    android:textColor="#172F57"
                    android:textStyle="bold" />

            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_14sdp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:text="Address"
                        android:textColor="#172F57"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="41 Tanta St. - from Aswan Square - Mohandessin"
                        android:textColor="#ACB5C2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Location"
                        android:textColor="#172F57"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_14sdp">

                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:map="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:context=".DoctorActivity" />
                    </androidx.cardview.widget.CardView>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp">

                        <com.skydoves.transformationlayout.TransformationLayout
                            android:id="@+id/transformationLayoutServices"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            app:transformation_duration="550"
                            app:transformation_targetView="@id/showingCard">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_white_rect"
                                android:backgroundTint="#115bdf"
                                android:gravity="center"
                                android:text="Services"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </com.skydoves.transformationlayout.TransformationLayout>

                        <com.skydoves.transformationlayout.TransformationLayout
                            android:id="@+id/transformationLayoutInsurances"
                            android:layout_width="@dimen/_125sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1"
                            app:transformation_duration="550"
                            android:layout_gravity="right"
                            app:transformation_targetView="@id/showingCard">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/shape_white_rect"
                                android:backgroundTint="#115bdf"
                                android:gravity="center"
                                android:text="Insurances"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </com.skydoves.transformationlayout.TransformationLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/txtBook"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginVertical="@dimen/_8sdp"
                        android:background="@drawable/shape_white_rect"
                        android:backgroundTint="#115bdf"
                        android:gravity="center"
                        android:text="Book Now"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/showingCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_420sdp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:backgroundTint="#115bdf"
        android:visibility="invisible"
        app:cardCornerRadius="@dimen/_14sdp">

        <TextView
            android:id="@+id/txtShowing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:srcCompat="@android:drawable/ic_delete"
            app:tint="#F1ECEC" />
    </androidx.cardview.widget.CardView>

</FrameLayout>